@model IEnumerable<MyApp.Entities.Models.Prestamo>
@using MyApp.Entities.Models

@{
    ViewData["Title"] = "Solicitar Préstamo";
    var articulos = ViewBag.ArticulosDisponibles as List<Articulo>;
}

<h2>Solicitar Préstamo</h2>

<form asp-action="Solicitar" method="post">
    <div class="form-group">
        <label>Artículo</label>
        <select name="articuloId" class="form-control">
            @foreach (var art in articulos)
            {
                <option value="@art.Id">@art.Nombre (@art.Codigo)</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label>Fecha de entrega</label>
        <input type="date" name="fechaEntrega" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-success">Solicitar</button>
</form>
